---
import { useTranslations } from "../i18n/utils";

const t = useTranslations(Astro.url.pathname);
---

<section class="py-24 bg-gray-900/50">
  <div class="container mx-auto px-6 md:px-12 text-center">
    <div class="max-w-4xl mx-auto space-y-12">
      <div class="space-y-4">
        <h2 class="text-3xl md:text-4xl font-bold text-white">
          {t("impact.title")}
        </h2>
        <div class="h-1 w-20 bg-blue-500 mx-auto rounded-full"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-8 items-stretch">
        <!-- Stat Card 1 -->
        <div
          class="bg-gray-800/50 p-8 rounded-2xl border border-gray-700 hover:border-blue-500/50 transition-all duration-300 group h-full flex flex-col justify-center"
        >
          <div
            class="text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400 mb-2"
          >
            2.000.000+
          </div>
          <div
            class="text-gray-400 font-medium uppercase tracking-wider text-sm"
          >
            {t("impact.installations")}
          </div>
          <p class="mt-4 text-gray-300 leading-relaxed">
            {
              t("impact.creator", {
                vscodeJestRunner: (
                  <span class="text-white font-semibold">
                    vscode-jest-runner
                  </span>
                ),
              })
            }
          </p>
        </div>

        <!-- Stat Card 2 -->
        <div
          class="bg-gray-800/50 p-8 rounded-2xl border border-gray-700 hover:border-blue-500/50 transition-all duration-300 group h-full flex flex-col justify-center"
        >
          <div
            class="text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 mb-2"
          >
            Nx Recommended
          </div>
          <div
            class="text-gray-400 font-medium uppercase tracking-wider text-sm"
          >
            {t("impact.enterprise")}
          </div>
          <p class="mt-4 text-gray-300 leading-relaxed">
            {
              t("impact.nx", {
                nx: <span class="text-white font-semibold">Nx</span>,
              })
            }
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
