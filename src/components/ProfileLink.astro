---
import { Icon } from 'astro-icon'

interface Props {
  name: string;
  link: string;
  icon: string
}

const { name, link, icon }: Props = Astro.props;
---

<div class="flex flex-row items-center cursor-pointer mt-2">
    <Icon name={icon} class="h-8 mr-1" />
    <span><a class="no-underline text-sm" href={link} target="_blank" rel="noopener noreferrer">{name}</a></span>
</div>