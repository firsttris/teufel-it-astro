---
interface Props {
  name: string;
  link: string;
}

const { name, link }: Props = Astro.props;
---

<a
  class="text-primary font-medium relative transition-all duration-200 after:absolute after:bottom-0 after:left-0 after:h-[1px] after:w-0 after:bg-current after:transition-all after:duration-200 hover:after:w-full"
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  >{name}
</a>